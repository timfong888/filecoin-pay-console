{
  "name": "@filecoin-pay/subgraph",
  "version": "3.0.0",
  "description": "A subgraph to index data from payments actor to serve as data layer for frontend integration",
  "private": false,
  "files": ["build", "schemas", "config", "templates", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "biome check --write",
    "precodegen": "rm -rf ./generated && pnpm generate:schema && pnpm generate:yaml",
    "codegen": "graph codegen",
    "generate:yaml": "mustache ./config/${NETWORK:-network}.json ./templates/subgraph.template.yaml > subgraph.yaml",
    "generate:schema": "cp ./schemas/schema.${VERSION:-v1}.graphql schema.graphql",
    "prebuild": "pnpm codegen",
    "build": "graph build",
    "clean": "rm -rf ./generated ./build ./schema.graphql ./subgraph.yaml",
    "deploy": "graph deploy --node https://api.studio.thegraph.com/deploy/ filecoin-pay-subgraph",
    "create-local": "graph create --node http://localhost:8020/ filecoin-pay-subgraph",
    "remove-local": "graph remove --node http://localhost:8020/ filecoin-pay-subgraph",
    "deploy-local": "graph deploy --node http://localhost:8020/ --ipfs http://localhost:5001 filecoin-pay-subgraph --network localhost",
    "deploy:mainnet": "graph deploy --node https://api.studio.thegraph.com/deploy/ filecoin-pay-subgraph --network mainnet",
    "pretest": "pnpm codegen",
    "test": "graph test",
    "test:coverage": "graph test -c"
  },
  "dependencies": {
    "@graphprotocol/graph-cli": "^0.97.0",
    "@graphprotocol/graph-ts": "^0.38.1"
  },
  "devDependencies": {
    "assemblyscript": "0.19.23",
    "matchstick-as": "^0.6.0",
    "mustache": "^4.2.0",
    "wabt": "^1.0.37"
  }
}
